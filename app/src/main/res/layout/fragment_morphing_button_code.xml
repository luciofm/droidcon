<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_light"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.MorphingButtonCodeFragment">

    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text1"
        android:text="Transition Manager"
        android:layout_marginTop="@dimen/padding"
        android:gravity="center"
        android:textSize="@dimen/text_title"
        style="@style/TextShadow"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_dark"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/padding"
        android:id="@+id/container2"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/grey_dark"
            android:padding="@dimen/padding"
            android:id="@+id/container3"
            android:visibility="visible"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:orientation="vertical"
                android:background="@drawable/ripple_pink"
                android:id="@+id/reg_container">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textRegister"
                    android:text="Register"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textColor="@color/pink"
                    android:background="@drawable/ripple_press"/>
                <EditText
                    android:id="@+id/editReg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/grey_dark"
                    android:hint="email"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>
                <EditText
                    android:id="@+id/editReg2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/grey_dark"
                    android:hint="password"
                    android:enabled="false"
                    android:inputType="textPassword"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/editReg3"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/grey_dark"
                    android:hint="repeat password"
                    android:inputType="textPassword"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/buttonReg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pink"
                    android:textColor="@color/grey_light"
                    android:text="Register"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:orientation="vertical"
                android:background="@color/grey_light"
                android:id="@+id/login_container">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLogin"
                    android:text="Login"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_press"
                    android:textColor="@color/pink"/>
                <EditText
                    android:id="@+id/editLog1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/grey_dark"
                    android:hint="email"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_margin="20dp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/editLog2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/grey_dark"
                    android:hint="password"
                    android:enabled="false"
                    android:inputType="textPassword"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/buttonLog1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pink"
                    android:textColor="@color/grey_light"
                    android:text="Login"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextSwitcher
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/text2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/TextCode"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/TextCode"/>
    </TextSwitcher>
</LinearLayout>
