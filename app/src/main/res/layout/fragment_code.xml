<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_dark"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.WhyFragment">

    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text1"
        android:text="Talk is cheap.\nShow me the Code."
        android:textAllCaps="true"
        android:gravity="left"
        android:textSize="@dimen/text_title_really_big"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_light"
        style="@style/TextShadow"
        app:typeFace="YanoneKaffeesatz-Bold.ttf"/>

</LinearLayout>