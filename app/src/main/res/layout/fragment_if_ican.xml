<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_light"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    android:padding="@dimen/page_margin"
    tools:context="com.luciofm.ifican.app.ui.IfICanFragment">

    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text1"
        android:text="If I can, You can too..."
        android:padding="@dimen/padding_big"
        android:gravity="center"
        android:textSize="@dimen/text_title_really_big"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_dark"
        style="@style/TextShadow"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text2"
        android:layout_marginTop="40dp"
        android:text="Animations for Developers"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_title_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/grey_light"
        android:background="@color/pink"
        android:visibility="gone"
        tools:visibility="visible"
        app:typeFace="YanoneKaffeesatz-Regular.ttf" />
</LinearLayout>
