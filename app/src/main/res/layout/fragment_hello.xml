<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow_light_background"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    android:padding="48dp"
    tools:context="com.luciofm.ifican.app.ui.IfICanFragment">

    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text1"
        android:text="Hello..."
        android:padding="@dimen/padding_big"
        android:gravity="center"
        android:textSize="@dimen/text_title_huge"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green_primary"
        style="@style/TextShadow"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>
</LinearLayout>
