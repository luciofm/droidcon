<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/blue_light"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="48dp"
    android:animateLayoutChanges="true"
    tools:context="com.luciofm.droidcon.ifican.fragment.MyselfFragment">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_gravity="center"
        android:alpha="0"
        tools:alpha="1"
        tools:visibility="visible"
        tools:src="@drawable/me"
        android:id="@+id/image"/>
    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text1"
        android:gravity="center"
        android:textSize="@dimen/text_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow_primary_dark"
        android:text="LÃºcio Maciel"
        app:typeFace="YanoneKaffeesatz-Bold.ttf"
        android:visibility="gone"
        tools:visibility="visible"/>
    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text2"
        android:gravity="center"
        android:textSize="@dimen/text_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow_primary_dark"
        android:text="\@luciofm"
        app:typeFace="YanoneKaffeesatz-Bold.ttf"
        android:visibility="gone"
        tools:visibility="visible"/>
    <com.luciofm.droidcon.ifican.widget.TextView
        android:gravity="center"
        android:textSize="@dimen/text_title"
        android:id="@+id/text3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow_primary_dark"
        android:text="github.com/luciofm"
        app:typeFace="YanoneKaffeesatz-Bold.ttf"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>
