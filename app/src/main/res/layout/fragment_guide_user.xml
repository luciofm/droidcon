<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink"
    android:id="@+id/container"
    android:clickable="true"
    android:gravity="center"
    android:animateLayoutChanges="true"
    tools:context="com.luciofm.droidcon.ifican.fragment.GuideUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginTop="8dp"
        android:id="@+id/container2">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guide1"
            android:layout_margin="16dp"
            android:id="@+id/gif1"/>

    </LinearLayout>
    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text1"
        android:text="Guide the User"
        android:padding="@dimen/padding_large"
        android:gravity="center"
        android:textSize="@dimen/text_title_big"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_light"
        android:background="@color/pink"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>
</LinearLayout>
