<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_light"
    android:animateLayoutChanges="true"
    android:id="@+id/container"
    android:clickable="true"
    android:gravity="center"
    tools:context="com.luciofm.ifican.app.ui.AtentionFragment">

    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text1"
        android:layout_marginTop="@dimen/padding_small"
        android:text="FEEDBACK"
        android:gravity="center"
        android:textSize="@dimen/text_title_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:textColor="@color/grey_light"
        android:background="@color/pink"
        android:elevation="4dp"
        style="@style/TextShadow"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>
    <com.luciofm.droidcon.ifican.widget.SquareGridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:layout_margin="@dimen/padding"
        android:id="@+id/container2"
        android:visibility="gone"
        tools:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center"
        app:spacing="@dimen/padding"
        app:numColumns="2">
    </com.luciofm.droidcon.ifican.widget.SquareGridLayout>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_big"
        android:id="@+id/gif5"
        android:visibility="gone"
        tools:visibility="visible"
        android:src="@drawable/feedback5" />
</LinearLayout>
