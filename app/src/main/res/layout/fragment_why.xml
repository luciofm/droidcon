<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light_background"
    android:animateLayoutChanges="true"
    android:layout_gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.droidcon.ifican.fragment.WhyFragment">

    <com.luciofm.droidcon.ifican.widget.TextView
        android:id="@+id/text1"
        android:text="Why animate?"
        android:padding="@dimen/padding_big"
        android:gravity="center"
        android:textSize="@dimen/text_title_huge"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_primary"
        style="@style/TextShadow"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

</FrameLayout>
